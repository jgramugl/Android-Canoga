<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ramapo.opl.joegramuglia.canoga.view.ComputerGame">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Rolled: 0"
            android:id="@+id/rollTotalTitle"
            android:textSize="@dimen/abc_text_size_display_2_material" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humanBoard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Human     "
                android:id="@+id/humanTitle"
                android:textSize="@dimen/abc_text_size_display_2_material" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/computerBoard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer"
                android:id="@+id/computerTitle"
                android:textSize="@dimen/abc_text_size_display_2_material" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Turn"
            android:id="@+id/takeTurnButton"
            android:onClick="takeTurn"
            android:textSize="@dimen/abc_text_size_display_2_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Turn"
            android:id="@+id/endTurnButton"
            android:onClick="endTurn"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logic"
            android:id="@+id/logicTitle"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
